@model List<Transferencia>

<link href="~/css/site.css" rel="stylesheet" />
<link href="~/css/style.css" rel="stylesheet" />

@{
    List<User>? users= ViewData["Users"] as List<User>;
    List<BankAccount>? accounts= ViewData["Accounts"] as List<BankAccount>;
    

}

<body>

    @foreach (var transfer in Model)
    {
        <div class="card">
            <div class="card-header">Detalles de la transferencia</div>
            <div class="card-body">
                <h5 class="card-title">Transferencia ID: @transfer.IdTransfer</h5>
                <div class="card-text">
                    <div class="modal-body">
                        <div class="col-sm-6">
                            <label>ID de la cuenta remitente:</label>
                            <input class="form-control" asp-for="@transfer.IdAccountSender" readonly />
                        </div>
                        @{
                            int idSender = transfer.IdAccountSender;
                            int idReceiver = transfer.IdAccountReceiver;

                            BankAccount accountSender = accounts.FirstOrDefault(u => u.IdAccount == transfer.IdAccountSender);
                            BankAccount accountReceiver = accounts.FirstOrDefault(u => u.IdAccount == transfer.IdAccountReceiver);

                            User userSender = users.FirstOrDefault(u => u.IdUser == accountSender.IdUser);
                            User userReceiver = users.FirstOrDefault(u => u.IdUser == accountReceiver.IdUser);

                            if(transfer.IdAccountSender == accountSender.IdAccount)
                            {
                                <div class="col-sm-6">
                                    <label>Nombre del usuario emisor:</label>
                                    <input class="form-control" asp-for="@userSender.Name" readonly />
                                </div>
                            } else
                            {
                                <div class="col-sm-6">
                                    <label>Nombre del usuario emisor 2:</label>
                                    <input class="form-control" asp-for="@userReceiver.Name" readonly />
                                </div>
                            }
                        }
                        <div class="col-sm-6">
                            <label>ID de la cuenta receptora:</label>
                            <input class="form-control" asp-for="@transfer.IdAccountReceiver" readonly />
                        </div>
                        @{
                            int idSender2 = transfer.IdAccountSender;
                            int idReceiver2 = transfer.IdAccountReceiver;

                            BankAccount accountSender2 = accounts.FirstOrDefault(u => u.IdAccount == transfer.IdAccountSender);
                            BankAccount accountReceiver2 = accounts.FirstOrDefault(u => u.IdAccount == transfer.IdAccountReceiver);

                            User userSender2 = users.FirstOrDefault(u => u.IdUser == accountSender.IdUser);
                            User userReceiver2 = users.FirstOrDefault(u => u.IdUser == accountReceiver.IdUser);

                            if (transfer.IdAccountSender != accountSender.IdAccount)
                            {
                                <div class="col-sm-6">
                                    <label>Nombre del usuario emisor:</label>
                                    <input class="form-control" asp-for="@userSender2.Name" readonly />
                                </div>
                            }
                            else
                            {
                                <div class="col-sm-6">
                                    <label>Nombre del usuario emisor 2:</label>
                                    <input class="form-control" asp-for="@userReceiver2.Name" readonly />
                                </div>
                            }
                        }
                        <div class="col-sm-6">
                            <label>Monto:</label>
                            <input class="form-control" asp-for="@transfer.Amount" readonly />
                        </div>
                        <div class="col-sm-6">
                            <label>Fecha de emisión:</label>
                            <input class="form-control" asp-for="@transfer.DateIssue" readonly />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }          
    <a class="btn btn-danger" asp-action="Information" style="margin-top: 0.7rem;">Volver</a>
    
</body>