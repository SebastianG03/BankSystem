@model User

<link rel="stylesheet" href="~/css/bootstrap.min.css" />
<link href="~/css/site.css" rel="stylesheet" />
<link href="~/css/style.css" rel="stylesheet" />

<title>Registro de usuario</title>

<h2>@ViewData["Title"]</h2>
<div>
    <form method="post" autocomplete="on" class="mb-3">
        <div class="col-md-6">
            <label>Nombre de usuario:</label>
            <input asp-for="Name" type="text"  class="form-control" required />
        </div>
        <div class="col-md-6">   
            <label>Email:</label>
            <input asp-for="Email" type="email" class="form-control" required />
        </div>
        <div class="col-md-6">
            <label>Ingrese una contraseña:</label>
            <input asp-for="Password" class="form-control" type="password" required />
        </div>
        <div class="col-md-6">
            <label>Número de teléfono:</label>
            <input asp-for="Phone" type="text" class="form-control" required />
        </div>
        <div class="col-md-6">
            <label>DNI:</label>
            <input asp-for="DNI" type="text" class="form-control" required />
        </div>
        <div class="col-md-6">
            <label>Rol:</label>
            <select class="form-select" asp-for="Role">
                <option selected>Cliente</option>
                <option value="1">Administrador</option>
            </select>
        </div>

        <div style="margin-top: 0.5rem;">
            <a asp-action="Index" asp-controller="Home" class="btn btn-danger">Cancelar</a>
            <button asp-action="Create" asp-asp-controller="NormUser" type="submit" class="btn btn-success">Registrarse</button>
        </div>
    </form>

</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
