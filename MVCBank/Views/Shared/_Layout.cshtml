<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - Tu Banca Web</title>
</head>

<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/bootstrap.min.css" asp-append-version="true" />
<link href="~/css/style.css" rel="stylesheet" asp-append-version="true" />

<body>
    <header>
        <nav  class="navbar nav-bar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand nav-pills navbar-a nav-item btn" asp-area="" asp-controller="Home" asp-action="Index">Tu Banca Web</a>
                <button class="navbar-toggler navbar-button" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link navbar-a text-dark nav-pills nav-item btn" asp-area="" asp-controller="NormUser" asp-action="Index">Ingresar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link navbar-a text-dark nav-pills nav-item btn" asp-area="" asp-controller="NormUser" asp-action="Create">Crear cuenta</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

   
    <footer class="border-top footer text-muted footer-menu">
        <div class="container copyright">
            &copy; 2023 - MVCBank - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
